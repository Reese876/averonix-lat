# Enable rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Handle favicon.ico and apple-touch-icon requests
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(favicon\.ico|apple-touch-icon.*\.png)$ /public/averonix-favicon.png [L]
    
    # Remove 'index' from URL
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+index [NC]
    RewriteRule ^index$ / [R=301,L]
    
    # Hide .html extensions
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
    RewriteRule ^ %1 [R=301,L]
    
    # Internally add .html extension back
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^(.*)$ $1.html [L]
    
    # Remove /public from URLs
    RewriteCond %{THE_REQUEST} /public/([^\s?]*) [NC]
    RewriteRule ^ /%1 [L,NE,R=301]
    
    # Internally forward requests to /public directory
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ /public/$1 [L]
    
    # Redirect root to index
    RewriteRule ^$ /public/index.html [L]
</IfModule>

# Protect sensitive directories
<IfModule mod_rewrite.c>
    # Protect config directory
    RewriteRule ^config/ - [F,L]
    
    # Allow access to includes only for paddle-handler.php
    RewriteCond %{REQUEST_URI} ^/includes/
    RewriteCond %{REQUEST_URI} !^/includes/paddle-handler\.php$
    RewriteRule ^ - [F,L]
</IfModule>

# Protect against PHP file access
<FilesMatch "\.php$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Protect sensitive files
<FilesMatch "^(config\.php|\.env)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Prevent directory listing
Options -Indexes

# Force HTTPS
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule> 